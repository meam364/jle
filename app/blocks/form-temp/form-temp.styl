.form-temp
	background-color #fff
	border-bottom-left-radius 30px
	border-top-right-radius 30px
	padding-top 12px
	padding-bottom 18px
	max-width 360px
	width 100%
	padding-left 33px
	padding-right 24px
	text-align left
	color rgb(128,128,128)
	font-family 'Lato'
	@media (max-width: 992px)
		padding-top 14px
		padding-left 26px
		padding-right 30px
		padding-bottom 35px
	&__title
		font-size 22px
		font-weight bold
		color rgb(106,107,112)
		margin-bottom 4px
		margin-left 21px

	&__label
		margin-bottom 7px
		font-size 14px
		margin-left 2px
		display block

	&__option
		color rgb(91,94,99)
	&__radio-label
		font-size 14px
		margin-right 6px
		margin-left 2px
		margin-bottom 10px
		margin-left 0

	&__input
		margin-bottom 12px
		box-shadow none
		height 43px
		@media (max-width: 992px)
			height 56px
			margin-bottom 22px

	&__button
		border none
		font-size 21px
		text-transform uppercase
		margin-left -2px
		font-family 'Lato', sans-serif
		padding 18px 0 19px 0
		margin-top 8px

	& &__radio
		margin 0
		margin-right 5px
		vertical-align middle
