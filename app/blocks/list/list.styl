.list
	display block
	text-align left
	color #fff

	&_blue &
		&__name
			color #000
		&__item
			font-size 21px
			color #666
			font-weight 400
			background-image url('data:image/svg+xml;base64,')

	@media (max-width: 992px)
		text-align center
		display inline-block
	&__name
		font-size 21px
		margin-bottom 20px
		font-weight bold
		@media (max-width: 992px)
			font-size 18px
			margin-bottom 8px
	&__items
		margin-left 4px
	&__item
		background url(../images/mark.png) no-repeat left 7px
		background-size 15px
		position relative
		font-size 17px
		margin-bottom 16px
		padding-left 30px
		font-weight bold
		text-align left
