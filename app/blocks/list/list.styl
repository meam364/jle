.list
	display block
	text-align left
	color #fff
	@media (max-width: 992px)
		text-align center
		display inline-block
	&__name
		font-size 21px
		margin-bottom 20px
		font-weight bold
		@media (max-width: 992px)
			font-size 18px
			margin-bottom 8px
	&__items
		margin-left 4px
	&__item
		position relative
		font-size 17px
		margin-bottom 16px
		padding-left 36px
		font-weight bold
		text-align left
		&:after
			position absolute
			left 0
			top 2px
			background url(../images/mark.png) no-repeat
			width 28px
			height 22px
			content ''
