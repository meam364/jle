.form
	border-radius 7px
	background #fff
	padding 16px 25px
	max-width 392px
	margin 0 auto
	text-align left

	&_rounded
		border-radius 0
		border-bottom-left-radius 30px
		border-top-right-radius 30px
		padding-left 33px
		padding-right 24px
		padding-top 12px
		padding-bottom 18px
		max-width 360px
		& .button
			padding 18px 0 19px 0
			text-transform uppercase


	&_rounded &
		&__title
			color #6a6b70
			font-size 20px
			margin-bottom 4px




	&__title
		color #ed1c24
		font-size 22px
		font-family montserat
		font-weight 700
		margin-bottom 20px
		text-align center

	&__button
		width 100%
		border none
		background #ed1c24
		border-radius 5px
		color #fff
		font-size 21px
		text-align center
		padding 15px 0
		margin-top 11px
		font-weight 700
		transition background .2s ease-in-out
		&:hover
			background #222222

	&__label
		display block
		text-align left
		font-size 14px
		color #000
		font-weight 400
		margin-bottom 9px

	&__radio
		font-size 14px
		font-weight 400
		vertical-align middle
		margin 0
		margin-right 6px
		margin-bottom 10px



	& &__radio-input
		margin 0
		margin-right 5px

	&__input
		display block
		width 100%
		text-align left
		height 43px
		border-radius 3px
		font-size 15px
		border 1px solid #CBC3C3
		padding 10px
		margin-bottom 12px
