.testimonial
	display flex
	background #FBF1F2
	padding 13px 15px
	margin-bottom 30px

	@media (max-width 992px)
		background none
		display block
		text-align left
	&:last-of-type
		margin-bottom 0

	&_mini
		.testimonial__info
			margin-top 0
		.testimonial__name
			margin-top 0
		.testimonial__details
			position absolute
			right -110px
			top 50%
			@media (max-width 992px)
				position static


	&_right
		flex-direction row-reverse
		.testimonial__info
			margin-right 0
			margin-left 6px

	&__info
		text-align center
		margin-right 6px
		position relative
		margin-top 12px
		@media (max-width 992px)
			text-align left
			display flex
			align-items center
			margin-top 0
			margin-right 0

	&__photo
		@media (max-width 992px)
			margin-right 16px
			margin-bottom 16px


	&__text
		font-size 16px
		font-style italic
		color #9E9E9E

	&__name
		font-size 17px
		font-weight 700
		color #000
		margin-top 10px

	&__post
		font-size 17px
		color #000
		text-align center
